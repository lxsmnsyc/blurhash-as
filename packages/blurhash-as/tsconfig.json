{
  "extends": "assemblyscript/std/assembly.json",
  "exclude": [
    "node_modules"
  ],
  "include": [
    "assembly"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "target": "ES2018"
  }
}